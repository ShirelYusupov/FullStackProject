<%- include('partials/header') %>

  <div class="contain"> 
    <div class="form"> 
      <div class="contact-info">
        <img src="images/login_photo.jpg" alt="login form" class="img-fluid"/>
      </div>
    
      <div class="contact-form">
        <span class="circle one"></span>
        <span class="circle two"></span>

        <form action="/login" method="POST">
          <h3 class="title">Sign into your VIP customers account</h3>
          <div class="input-contain">
            <input type="email" name="username" class="input" required/>
            <label for="">Email Address</label>
            <span>Email Address</span> 
          </div>
          <div class="input-contain">
            <input type="password" name="password" class="input"/>
            <label for="">Password</label>
            <span>Password</span>
          </div>
          <button class="bigbtn" type="submit">Login</button>

          <div class="or-container"><div class="line-separator"></div> <div class="or-label">or</div><div class="line-separator"></div></div>

          <div class="row">
            <div class="col-md-12">
              <a class="btn btn-google btn-block btn-outline" href="/auth/google"><img src="https://img.icons8.com/color/16/000000/google-logo.png"> Login With Google</a>
            </div>
          </div>
          <br>
          <p class="mb-5 pb-sm-2">Don't have an account?<a class="logtext" href="register"> Register here</a></p>
        </form>

        <script>
          function focusFunc() {
          let parent = this.parentNode;
          parent.classList.add("focus");
  
          if (this.value == "") {
          parent.classList.remove("filled");
          let label = parent.querySelector("label");
          label.classList.add("active");
          } else {
          let label = parent.querySelector("label");
          label.classList.remove("active");
          parent.classList.add("filled");
          }
          }
    
          function blurFunc() {
          let parent = this.parentNode;
          if (this.value == "") {
          parent.classList.remove("focus");
          }
          }
              
          let inputs = document.querySelectorAll(".input");
          inputs.forEach(input => {
          input.addEventListener("focus", focusFunc);
          input.addEventListener("blur", blurFunc);
          });
        </script>
      </div>
    </div>
  </div>
    
<%- include('partials/footer') %>
  
